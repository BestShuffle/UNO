<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="fr.uno.client.graphic.controller.RegisterFrameController" alignment="center" hgap="10"
          vgap="10">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <Label style="-fx-font: NORMAL 20 Tahoma;" text="Inscription"
           GridPane.columnIndex="0" GridPane.rowIndex="0">
    </Label>

    <Label text="Nom d'utilisateur :" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="fieldUsername" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Mot de passe :" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <PasswordField fx:id="fieldPassword" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Adresse e-mail :" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="fieldMail" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <HBox spacing="10" alignment="bottom_right" GridPane.columnIndex="1" GridPane.rowIndex="5">
        <Button text="S'inscrire" onAction="#handleSubmitButtonRegisterAction"/>
    </HBox>

    <!--<HBox spacing="-Infinity" GridPane.columnIndex="0" GridPane.rowIndex="6">-->
